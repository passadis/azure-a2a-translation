                    },
                    "parts": {
                        "type": "object",
                        "properties": {
                            "document_content": {"type": "string"}
                        }
                    }
                }
            },
            "output_format": {
                "type": "object",
                "properties": {
                    "status": {"type": "string", "enum": ["pending", "completed", "failed"]},
                    "artifact": {
                        "type": "object",
                        "properties": {
                            "artifact_content": {"type": "string"}
                        }
                    }
                }
            }
        }
    ]
}




